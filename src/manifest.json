{
  "version": "1.1",
  "manifest_version": 2,
  "name": "Posterizer",
  "description": "Apply posterDB sets to plex",
  "content_scripts": [
    {
      "matches": ["*://*.theposterdb.com/*"],
      "js": ["lib/js/browser-polyfill.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["lib/js/browser-polyfill.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "img/orange.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.theposterdb.com/*",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "128": "img/orange.png"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
