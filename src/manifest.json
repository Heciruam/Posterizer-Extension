{
  "version": "1.2.1",
  "manifest_version": 2,
  "name": "Posterizer",
  "description": "Apply posterDB sets to plex",
  "content_scripts": [
    {
      "matches": ["*://*.theposterdb.com/*"],
      "js": ["lib/js/browser-polyfill.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["lib/js/browser-polyfill.js", "background.js"]
  },
  "page_action": {
    "browser_style": true,
    "default_title": "Posterizer",
    "default_icon": "img/orange.png",
    "default_popup": "popup.html",
    "show_matches": ["*://*.theposterdb.com/*"]
  },
  "permissions": [
    "*://*.theposterdb.com/*",
    "tabs",
    "activeTab",
    "identity",
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "128": "img/orange.png"
  }
}
